{
    "$schema": "http://json-schema.org/draft-04/hyper-schema#",
    "id": "https://westcon-group.com/api/v4/hyper-schema#",
    "title": "Westcon Supplier JSON Hyper-Schema",
    "allOf": [
        {
            "$ref": "http://json-schema.org/draft-04/hyper-schema#"
        }
    ],
    "definitions": {
        "resourceId": {
            "anyOf": [
                {
                    "properties": {
                        "id": {
                            "type": "integer"
                        }
                    }
                },
                {
                    "properties": {
                        "id": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "link": {
            "properties": {
                "href": {
                    "pattern": "^(/([a-z][a-z\\-_]*[a-z]|\\{\\(.*\\)\\}))+$"
                },
                "schema": {
                    "anyOf": [
                        {
                            "required": ["properties","type"]
                        },
                        {
                            "required": ["patternProperties","type"]
                        },
                        {
                            "$ref": "#/definitions/ref"
                        }
                    ]
                }
            },
            "required": ["description", "href", "method", "rel", "title"]
        },
        "ref": {
            "required": ["$ref"]
        },
        "resource": {
            "dependencies": {
                "properties": {
                    "properties": {
                        "definitions": {
                            "additionalProperties": {
                                "$ref": "#/definitions/resourceDefinition"
                            },
                            "properties": {
                                "id": {
                                    "$ref": "#/definitions/resourceId"
                                }
                            },
                            "required": ["id"]
                        }
                    }
                }
            },
            "properties": {
                "links": {
                    "items": {
                        "$ref": "#/definitions/link"
                    }
                },
                "properties": {
                    "patternProperties": {
                        "^[a-z][a-z_]*[a-z]$": {
                            "$ref": "#/definitions/resourceProperty"
                        }
                    },
                    "strictProperties": true
                },
                "strictProperties": {
                    "enum": [true],
                    "type": "boolean"
                }
            },
            "required": [
                "definitions",
                "description",
                "title",
                "type"
            ]
        },
        "resourceDefinition": {
            "anyOf": [
                {
                    "required": ["example", "type"]
                },
                {
                    "required": ["type"],
                    "type": ["array"]
                },
                {
                    "required": ["type"],
                    "type": ["object"]
                }
            ],
            "not": {
                "required": ["links"]
            },
            "required": ["description"]
        },
        "resourceProperty": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ref"
                },
                {
                    "properties": {
                        "properties": {
                            "additionalProperties": {
                                "$ref": "#/definitions/resourceProperty"
                            }
                        },
                        "strictProperties": {
                            "enum": [true],
                            "type": "boolean"
                        }
                    },
                    "required": ["description", "properties", "type"]
                },
                {
                    "properties": {
                        "items": {
                            "$ref": "#/definitions/ref"
                        }
                    },
                    "required": ["description", "items", "type"]
                }
            ]
        },
        "eventDefinition": {
            "properties": {
              "links": {
                  "items": [
                      { 
                          "properties": {
                              "href": {
                                  "type": "string"
                              },
                              "rel": {
                                  "enum": ["self"]
                              }
                          }
                      },
                      {
                          "properties": {
                              "href": {
                                  "type": "string"
                              },
                              "rel": {
                                  "enum": ["instances"]
                              }
                          }
                          
                      }
                  ]
              }
            },
            "required": ["links"]
        }
    },
    "properties": {
        "definitions": {
            "properties": {
                "event": {
                    "$ref": "#/definitions/eventDefinition"
                }
            },
            "additionalProperties": {
                "$ref": "#/definitions/resource"
            },
            "required": ["event"]
        },
        "links": {
            "additionalProperties": {
                "$ref": "#/definitions/ref"
            }
        },
        "properties": {
            "additionalProperties": {
                "$ref": "#/definitions/ref"
            }
        }
    },
    "required": [
        "$schema",
        "definitions",
        "description",
        "id",
        "links",
        "properties",
        "title",
        "type"
    ]
}