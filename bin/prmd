#!/usr/bin/env ruby
require 'optparse'

# Get actual file
_file = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__

# Load install gem
# In case of error, attempt to load local gem
begin
  require 'prmd'
  require 'prmd/cli'
rescue LoadError
  # Try to add local gem to load path
  path = File.expand_path("../../lib", _file)
  if File.exists?("#{path}/prmd.rb")
    $:.push path
    retry
  end
  raise
end

