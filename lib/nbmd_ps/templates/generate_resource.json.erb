      "default":"Password123",
      "readOnly": false,
      "type": ["string"],
      "options":{
          "hidden":false
      }
    },
    "created_at": {
      "description": "when the <%= resource.titleize %> was created",
      "example": "2012-01-01T12:00:00Z",
      "readOnly":true,
      "format": "date-time",
      "type": ["string"],
      "options":{
          "hidden":true
      }
    },
    "updated_at": {
      "description": "when the <%= resource.titleize %> was last updated",
      "example": "2012-01-01T12:00:00Z",
      "readOnly":true,
      "type": ["string"],
      "options":{
          "hidden":true
      }
    },
    "customer":{
        "type":"object",
        "title":"Customer",
        "description": "Customer Information for <%= resource.titleize %> ",
        "readOnly": false,
        "properties":{
          "created_at": {
            "$ref": "/schemata/<%= resource %>#/definitions/created_at"
          },
          "id": {
            "$ref": "/schemata/<%= resource %>#/definitions/id"
          },
          "name": {
            "$ref": "/schemata/<%= resource %>#/definitions/name"
          },
          "admin_email": {
            "$ref": "/schemata/<%= resource %>#/definitions/admin_email"
          },
          "password": {
            "$ref": "/schemata/<%= resource %>#/definitions/password"
          },
          "updated_at": {
            "$ref": "/schemata/<%= resource %>#/definitions/updated_at"
          }
        }
  }
  },
  "properties": {
