{
  "id": "schemata/<%= resource %>",
  "title": "<%= resource.capitalize %>",
  "description": "A description of the <%= resource.titleize %> resource",
  "readOnly": false,
  "definitions": {
    "product_id": {
      "description": "unique identifier of the <%= resource %>",
      "example": "01234567-89ab-cdef-0123-456789abcdef",
      "readOnly": true,
      "format": "uuid",
      "type": ["string"],
      "options":{
          "hidden":true
      }
    },
    "product_name": {
      "description": "unique name of the <%= resource.titleize %>",
      "example": "name",
      "readOnly": false,
      "type": ["string"],
      "options":{
          "hidden":false
      }
    },
    "id": {
      "description": "unique identifier of the customer",
      "example": "01234567-89ab-cdef-0123-456789abcdef",
      "readOnly": true,
      "format": "uuid",
      "type": ["string"],
      "options":{
          "hidden":true
      }
    },
    "name": {
      "description": "unique name of the customer associated with <%= resource.titleize %>",
      "example": "name",
      "readOnly": false,
      "type": ["string"],
      "options":{
          "hidden":false
      }
    },
    "admin_email": {
      "description": "Admin Email id to manage orders for <%= resource.titleize %>",
